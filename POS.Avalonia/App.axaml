<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="POS.Avalonia.App"
             xmlns:local="using:POS.Avalonia"
             xmlns:conv="using:POS.Avalonia.Converters"
             RequestedThemeVariant="Light">
             <!-- Light = 60% white content; black/sidebar stay dark. Default would follow system (can make content dark). -->

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://POS.Avalonia/Styles/Theme.axaml"/>
                <ResourceInclude Source="avares://POS.Avalonia/Styles/Components.axaml"/>
                <ResourceInclude Source="avares://POS.Avalonia/Styles/Icons.axaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Spacing (overwritten by UiSizePresetValues.ApplyToApplication per preset) -->
            <x:Double x:Key="Spacing4">4</x:Double>
            <x:Double x:Key="Spacing8">8</x:Double>
            <x:Double x:Key="Spacing16">16</x:Double>
            <x:Double x:Key="Spacing24">24</x:Double>
            <x:Double x:Key="Spacing32">32</x:Double>
            <Thickness x:Key="Margin4">4</Thickness>
            <Thickness x:Key="Margin8">8</Thickness>
            <Thickness x:Key="Margin16">16</Thickness>
            <Thickness x:Key="Margin24">24</Thickness>
            <Thickness x:Key="Margin32">32</Thickness>
            <!-- Radius -->
            <CornerRadius x:Key="CornerRadius4">4</CornerRadius>
            <CornerRadius x:Key="CornerRadius8">8</CornerRadius>
            <CornerRadius x:Key="CornerRadius12">12</CornerRadius>
            <CornerRadius x:Key="CornerRadius16">16</CornerRadius>
            <!-- Typography -->
            <x:Double x:Key="CaptionFontSize">12</x:Double>
            <x:Double x:Key="BodyFontSize">14</x:Double>
            <x:Double x:Key="SubtitleFontSize">16</x:Double>
            <x:Double x:Key="TitleFontSize">20</x:Double>
            <x:Double x:Key="LargeTitleFontSize">24</x:Double>
            <FontWeight x:Key="CaptionFontWeight">Normal</FontWeight>
            <FontWeight x:Key="BodyFontWeight">Normal</FontWeight>
            <FontWeight x:Key="SubtitleFontWeight">SemiBold</FontWeight>
            <FontWeight x:Key="TitleFontWeight">Bold</FontWeight>
            <FontWeight x:Key="LargeTitleFontWeight">Bold</FontWeight>
            <conv:EqualityToBrushConverter x:Key="EqualityToBrushConverter" SelectedBrush="{StaticResource PrimaryBrush}" UnselectedBrush="{StaticResource SurfaceBrush}"/>
        </ResourceDictionary>
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://POS.Avalonia/Styles/AppControls.axaml"/>
    </Application.Styles>
</Application>