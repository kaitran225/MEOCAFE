<UserControl xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:POS.Avalonia.ViewModels"
             x:Class="POS.Avalonia.Views.ReportsView" x:DataType="vm:ReportsViewModel">
  <StackPanel Spacing="16" Margin="24">
    <TextBlock Text="Reports" FontSize="24" FontWeight="Bold"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <DatePicker SelectedDate="{Binding DateFrom}"/>
      <DatePicker SelectedDate="{Binding DateTo}"/>
      <Button Content="Sales summary" Command="{Binding RunSalesSummaryCommand}"/>
    </StackPanel>
    <StackPanel IsVisible="{Binding HasSummary}">
      <TextBlock Text="{Binding Summary.TotalRevenue, StringFormat='Revenue: {0:N0}'}"/>
      <TextBlock Text="{Binding Summary.OrderCount, StringFormat='Orders: {0}'}"/>
      <TextBlock Text="{Binding Summary.AverageTicket, StringFormat='Avg ticket: {0:N0}'}"/>
    </StackPanel>
  </StackPanel>
</UserControl>
