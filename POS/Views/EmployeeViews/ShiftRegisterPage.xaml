<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="POS.Views.EmployeeViews.ShiftRegister"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:POS.Views.EmployeeViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="ShiftButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="60" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />

            <!--  Cho phép text xuống dòng nếu quá dài  -->
        </Style>


        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <SolidColorBrush x:Key="RegisteredBrush" Color="#8feb51" />
        <!--BACKGROUND -->
        <SolidColorBrush x:Key="UnregisteredBrush" Color="#000000" />
        <!--BACKGROUND -->
        <SolidColorBrush x:Key="FullBrush" Color="#FFA500" />
        <!--BACKGROUND -->
        <SolidColorBrush x:Key="TextUnregisteredBrush" Color="#ffffff" />
        <!--TEXT ON BACKGROUND -->
        <SolidColorBrush x:Key="TextregisteredBrush" Color="#ffffff" />
        <!--TEXT ON BACKGROUND -->


    </Page.Resources>

    <StackPanel Margin="20">
        <!--  Title  -->
        <ContentDialog
            x:Name="ErrorDialog"
            Title="Thông báo"
            PrimaryButtonText="OK">
            <TextBlock x:Name="ErrorMessageTextBlock" />
        </ContentDialog>
        <ContentDialog
            x:Name="NotifyDialog"
            Title="Thông báo"
            PrimaryButtonText="OK">
            <TextBlock x:Name="NotiMessageTextBlock" />
        </ContentDialog>
        <TextBlock
            Margin="0,0,0,20"
            Style="{ThemeResource TitleTextBlockStyle}"
            Text="Đăng ký ca làm việc" />
        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">

            <Button
                x:Name="checkinButton"
                Margin="0,0,10,0"
                HorizontalAlignment="Center"
                Click="CheckinButton_Click"
                Content="Check in"
                Style="{StaticResource AccentButtonStyle}" />
            <Button
                x:Name="checkoutButton"
                HorizontalAlignment="Center"
                Click="CheckoutButton_Click"
                Content="Check out"
                Style="{StaticResource AccentButtonStyle}" />


        </StackPanel>

        <!--  Date Picker  -->
        <DatePicker
            x:Name="shiftDatePicker"
            Margin="0,0,0,20"
            DateChanged="ShiftDatePicker_DateChanged"
            Header="Chọn ngày" />

        <!--  Shift Grid  -->
        <Grid x:Name="shiftGridPanel" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        </Grid>

        <!--  Confirm Button  -->
        <Button
            x:Name="confirmButton"
            HorizontalAlignment="Center"
            Click="ConfirmButton_Click"
            Content="Xác nhận đăng ký"
            Style="{StaticResource AccentButtonStyle}" />
    </StackPanel>
</Page>