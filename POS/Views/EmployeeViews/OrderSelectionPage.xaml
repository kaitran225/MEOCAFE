<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="POS.Views.EmployeeViews.OrderSelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS.Models"
    xmlns:models="using:POS.Models"
    xmlns:converters="using:POS.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:PriceConverter x:Key="PriceConverter" />
        <converters:RelativeToAbsoluteConverter x:Key="AbsoluteConverter" />
        <converters:NullToStrikethroughConverter x:Key="NullToStrikethroughConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

        <!-- Menu Item Template -->
        <DataTemplate x:Key="MenuItemTemplate" x:DataType="local:OrderMenuItem">
            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Name="MenuBorder" Tapped="MenuBorder_Tapped">
                <StackPanel>
                    <Image Source="{x:Bind ItemImage}" Height="170" Width="200" Stretch="Fill" />
                    <TextBlock Text="{x:Bind Name}" FontWeight="Bold" FontSize="20" TextWrapping="Wrap"
                        TextAlignment="Center" />
                    <TextBlock Foreground="Gray" Margin="0,5,0,5" TextWrapping="Wrap" TextAlignment="Center"
                        Text="{x:Bind SellPrice, Converter={StaticResource PriceConverter}}"
                        TextDecorations="{x:Bind DiscountedPrice, Converter={StaticResource NullToStrikethroughConverter}}"
                    />
                    <!-- Discounted price (visible only if discounted price exists) -->
                    <TextBlock 
                        Text="{x:Bind DiscountedPrice, Converter={StaticResource PriceConverter}}"
                        TextWrapping="NoWrap" TextAlignment="Center"
                        FontSize="18" Foreground="Red" 
                        FontWeight="Bold" />
                    <StackPanel Orientation="Horizontal" Margin="12" HorizontalAlignment="Right">
                        <Button Name="Minus" Content="-" Click="Minus_Click" Tapped="Button_Tapped"/>
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="32">
                            <TextBlock Name="Quantity" Margin="6" Text="{x:Bind QuantitySelected, Mode=TwoWay}" HorizontalAlignment="Center"/>
                        </Grid>
                        <Button Name="Plus" Content="+" Click="Plus_Click" Tapped="Button_Tapped"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- Order Item Template -->
        <DataTemplate x:Key="OrderItemTemplate" x:DataType="local:OrderItem">
            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Tapped="Border_Tapped">
                <Grid Width="300" Padding="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource BodyStrongTextBlockStyle}" Text="{x:Bind MenuItem.Name}" />
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4 0 4 0"  Style="{StaticResource BodyTextStyle}">
                            <Run Text="×"/>
                            <Run Text="{Binding Quantity, Mode=TwoWay}" />
                        </TextBlock>
                    </StackPanel>

                    <TextBlock Grid.Column="1"  VerticalAlignment="Center" HorizontalAlignment="Right" Style="{StaticResource BodyTextStyle}" Text="{Binding Price, Converter={StaticResource PriceConverter}}" />
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <SplitView x:Name="MenuSplitView"
               IsPaneOpen="True"
               PanePlacement="Right"
               PaneBackground="Transparent"
               DisplayMode="Inline">

        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Search Box -->
            <TextBox x:Name="SearchBox" PlaceholderText="Search..." Margin="10" TextChanged="SearchBox_TextChanged"/>

            <!-- Category Button -->
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Button Margin="10" Content="All" Name="AllMenuItems" Click="AllMenuItems_Click" Width="80"/>
                <ItemsControl ItemsSource="{x:Bind ViewModel.Categories}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:Category">
                            <Button Margin="10" Width="88" Content="{x:Bind Name}" Name="CategoryButton" Click="CategoryButton_Click"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Margin="10" Content="Combo" Name="ComboButton" Click="CommboButton_Click" Width="80"/> 
            </StackPanel>

            <!-- Grid Menu -->
            <ScrollViewer HorizontalScrollMode="Disabled" VerticalScrollMode="Auto" Grid.Row="2" Grid.Column="0">
                <Grid HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <GridView
                        IsItemClickEnabled="True"
                        ItemsSource="{x:Bind ViewModel.FilteredMenuItems, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        Grid.Row="0"
                        ItemTemplate="{StaticResource MenuItemTemplate}"
                        ScrollViewer.HorizontalScrollMode="Disabled"
                        ScrollViewer.VerticalScrollMode="Auto" >
                        <GridView.ItemContainerStyle>
                            <Style TargetType="GridViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                <Setter Property="Margin" Value="10" />
                            </Style>
                        </GridView.ItemContainerStyle>
                    </GridView>
                </Grid>
            </ScrollViewer>
        </Grid>
        <SplitView.Pane>
            <!-- SplitView -->
            <ScrollViewer HorizontalScrollMode="Disabled" VerticalScrollMode="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <GridView
                            IsItemClickEnabled="True"
                            ItemsSource="{x:Bind ViewModel.OrderItems, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            Grid.Row="0"
                            ItemTemplate="{StaticResource OrderItemTemplate}"
                            ScrollViewer.HorizontalScrollMode="Disabled"
                            ScrollViewer.VerticalScrollMode="Auto" >
                            <GridView.ItemContainerStyle>
                                <Style TargetType="GridViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                    <Setter Property="Margin" Value="4" />
                                </Style>
                            </GridView.ItemContainerStyle>
                        </GridView>
                    </Grid>
                    <Grid Grid.Row="1" HorizontalAlignment="Center">
                        <Border Margin="0 0 0 32" Width="300" VerticalAlignment="Top" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                            <Grid Padding="16">
                                <StackPanel Orientation="Vertical">
                                    <Grid RowSpacing="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="Tổng tiền" Style="{StaticResource BodyTextBlockStyle}" Grid.Column="0"/>
                                        <TextBlock Text="{x:Bind ViewModel.GrandPrice, Mode=OneWay, Converter={StaticResource PriceConverter}}" Style="{StaticResource BodyTextStyle}"  Grid.Column="2" HorizontalAlignment="Right"/>
                                        <TextBlock Text="Giảm giá" Style="{StaticResource BodyTextBlockStyle}" Grid.Column="0" Grid.Row="1"/>
                                        <TextBlock Text="{x:Bind ViewModel.Discount, Converter={StaticResource PriceConverter}, Mode=OneWay}" Style="{StaticResource BodyTextStyle}" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right"/>
                                        <TextBlock VerticalAlignment="Center" Style="{StaticResource BodyStrongTextBlockStyle}" Text="Tổng cộng" Grid.Column="0" Grid.Row="2"/>
                                        <TextBlock VerticalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}" Text="{x:Bind ViewModel.GrandPrice, Converter={StaticResource PriceConverter}, Mode=OneWay}" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Margin="0 32 0 0">
                                        <TextBox Name="Phone_Number" PlaceholderText="Số điện thoại khách hàng" Width="Auto"/>
                                        <Button Content="Áp dụng" Margin="10,0,0,0" />
                                    </StackPanel>
                                    <TextBox Name="Note" PlaceholderText="Ghi chú" Margin="0 32 0 0" AcceptsReturn="True" TextWrapping="Wrap" Width="Auto" Height="200"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button HorizontalAlignment="Center" Margin="4 24 4 0" Style="{StaticResource AccentButtonStyle}" Content="QR Pay" Name="qr_payment" Click="qr_payment_Click" IsEnabled="{x:Bind ViewModel.IsOrderItemsNotEmpty, Mode=OneWay}" />
                                        <Button HorizontalAlignment="Center" Margin="4 24 4 0" Style="{StaticResource AccentButtonStyle}" Content="Thanh toán tiền mặt" Name="pay" Click="pay_Click" IsEnabled="{x:Bind ViewModel.IsOrderItemsNotEmpty, Mode=OneWay}" />
                                    </StackPanel>
                                    <TextBlock Name="Noti" Text="" Foreground="{StaticResource SystemFillColorCriticalBrush}" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0 24 0 0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </SplitView.Pane>
    </SplitView>
</Page>
